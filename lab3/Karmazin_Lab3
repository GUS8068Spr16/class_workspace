    <script>
        var map = L.map('map').setView([40.208288, -74.845495], 12); 
      L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);
        
    var myGeoJSON={
        'type': 'FeatureCollection',
        'features':[
        
                {'type':'Feature',
                    'properties':{
                        'name':'Afton Elementary'
                        'caption':'Afton Elementary'
                        'img':'<imgsrc="http://www.sunrise-eng.com/uploads/gallery/21fd1f17606b8224ad5087f0a1e4475f.jpg"/>'}
                    'geometry':{'type':'Point','coordinates':[40.245704, -74.876651]}},
                    
        
        
        
        
        
        
        
        
        
        function onEachFeature(feature, layer) {
        layer.bindPopup("<h1>"+feature.properties.name+"</h1><p>"+feature.properties.caption+"</p>"+feature.properties.img);
}

        
    
      
      
      
