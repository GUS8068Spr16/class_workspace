<html>

<head>
	<link rel="stylesheet" href="http://cdn.leafletjs.com/leaflet/v0.7.7/leaflet.css" />
	<script src="http://cdn.leafletjs.com/leaflet/v0.7.7/leaflet.js"></script>
</head> 
 

<body>
	<h1>Philadelphia's Best Schools & Demographics</h1>
	<div id='map' style="height:800px; width:1200px"></div>
	<script>
		var map = L.map('map').setView([40.002498, -75.1957877], 15);
		L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {
			attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors'
		}).addTo(map)
	
		L.marker([39.94408, -75.208878]).addTo(map)
   	.bindPopup('Alexander Wilson Elementary School.');
   	
	</script>
</body>

