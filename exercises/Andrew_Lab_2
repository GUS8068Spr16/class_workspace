		var map = L.map('map').setView([-44.7733079,169.2890086], 13);
		
		
		L.tileLayer('http://{s}.tile.osm.org/{z}/{x}/{y}.png', {
    		attribution: '&copy; <a href="http://osm.org/copyright">OpenStreetMap</a> contributors'
		}).addTo(map);
		
		Hagley Park = L.marker([-43.5270897,172.6200638])
    		.bindPopup(HagleyParkPopup).addTo(map);
    		
    		
    		
	</script>
